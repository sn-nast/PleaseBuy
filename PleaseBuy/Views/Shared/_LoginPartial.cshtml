@using Microsoft.AspNetCore.Identity
@using PleaseBuy.Areas.Identity.Data

@inject SignInManager<PleaseBuyUser> SignInManager
@inject UserManager<PleaseBuyUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item d-flex align-items-center">
        <i class="uil uil-user-circle w-100" style="font-size: 2vw; color: white;"></i>
    </li>
    <li class="nav-item">
        <a id="manage" class="nav-link text-white" title="Manage">
            @UserManager.GetUserName(User)
        </a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-white border-0">Logout</button>
        </form>
    </li>
}
else
{
