@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container auth-container">
    <div class="col-6 login-left">
        <form class="form-container" id="account" method="post">
            <h1>Sign in</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            
            <input type="text" asp-for="Input.UserName" autocomplete="username" aria-required="true" placeholder="username" />
            <span asp-validation-for="Input.UserName" class="required-alert" role="alert"></span>
            
            <input type="password" asp-for="Input.Password" autocomplete="current-password" aria-required="true" placeholder="password" />
            <span asp-validation-for="Input.Password" class="required-alert" role="alert"></span>
            
           <br> 
            <label asp-for="Input.RememberMe" class="form-label w-100">
                <input type="checkbox" asp-for="Input.RememberMe" class="w-25"/>
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
            <button id="login-submit" type="submit">Log in</button>
        </form>
    </div>
    <div class="col-6 login-right">
        <h1>Hello, Friend!</h1>
        <p>Enter your personal details and start journey with us</p>
        <a id="signUp" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
